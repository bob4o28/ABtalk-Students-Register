<Window x:Class="ABtalk_Students_Register.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ABtalk_Students_Register"
        mc:Ignorable="d"
        Title="StudentRegister" Height="450" Width="800">
    <Grid Background="#FFFFFEDA">
        <StackPanel x:Name="TopMenu" Background="#FFECD019" VerticalAlignment="Top" Height="55">
            <!-- Existing content in TopMenu -->
            <TextBox x:Name="SearchBox" TextWrapping="Wrap" local:TextBoxHelper.Placeholder="Enter student name..." Width="426" HorizontalAlignment="Center" Margin="0,17,0,392" TextChanged="SearchBox_TextChanged" RenderTransformOrigin="0.5,0.534" Height="19"/>

        </StackPanel>
        <StackPanel x:Name="RegistrationPanelNames" Margin="10,60,570,0" VerticalAlignment="Top" Height="322">
            <!-- Names of the student -->
            <TextBlock Text="First Name:" Margin="0,10,0,0" Height="16" Width="100" HorizontalAlignment="Left"/>
            <TextBox x:Name="FirstNameTextBox" Width="200" Margin="0,5,0,0" HorizontalAlignment="Left" Height="18"/>
            <TextBlock Text="Middle Name:" Margin="0,10,0,0" Height="16" Width="100" HorizontalAlignment="Left"/>
            <TextBox x:Name="MiddleNameTextBox" Width="200" Margin="0,5,0,0" HorizontalAlignment="Left" Height="18"/>
            <TextBlock Text="Last Name:" Margin="0,10,0,0" Height="16" Width="100" HorizontalAlignment="Left"/>
            <TextBox x:Name="LastNameTextBox" Width="200" Margin="0,5,0,0" HorizontalAlignment="Left" Height="18"/>
            <!-- School -->
            <TextBlock Text="School:" Margin="0,10,0,0" Height="16" Width="100" HorizontalAlignment="Left"/>
            <TextBox x:Name="SchoolTextBox" Width="200" Margin="0,5,0,0" HorizontalAlignment="Left" Height="18"/>
            <!-- Class -->
            <TextBlock Text="Class:" Margin="0,10,0,0" Height="16" Width="100" HorizontalAlignment="Left"/>
            <ComboBox x:Name="ClassComboBox" Width="55" HorizontalAlignment="Left">
                <ComboBoxItem Content="5"/>
                <ComboBoxItem Content="6"/>
                <ComboBoxItem Content="7"/>
                <ComboBoxItem Content="8"/>
                <ComboBoxItem Content="9"/>
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="11"/>
                <ComboBoxItem Content="12"/>
            </ComboBox>
            <Button x:Name="btnCancle" Content="Cancle" Width="84" HorizontalAlignment="Left" Margin="9,10,0,0"/>
            <Button x:Name="btnSave" Content="Save" Width="84" HorizontalAlignment="Left" Margin="108,-19,0,0"/>
            <!-- GUI -->

        </StackPanel>
    </Grid>
</Window>
